{# Kế thừa layout backend #}
{% extends "/trangAdmin/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Loại Sản PHẩm
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
<span class="animated fadeIn">Loại Sản Phẩm</span>
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<!-- Nút thêm mới, bấm vào sẽ hiển thị form nhập thông tin Thêm mới -->
<a href="them.php" class="btn btn-primary animated fadeIn">
    <i class="fas fa-plus"></i> Thêm mới
</a>
<table class="table table-bordered table-hover mt-2">
    <thead class="thead-dark">
        <tr>
            <th>Mã loại sản phẩm</th>
            <th>Tên loại sản phẩm</th>
            <th>Mô tả loại sản phẩm</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        {% for lsp in ds_loaisanpham %}
        <tr>
            <td class="animated fadeIn">{{ lsp.lspMa }}</td>
            <td class="animated fadeIn">{{ lsp.lspTen }}</td>
            <td class="animated fadeIn">{{ lsp.lspMoTa }}</td>
            <td class="animated fadeIn">
                <!-- Nút sửa, bấm vào sẽ hiển thị form hiệu chỉnh thông tin dựa vào khóa chính `lspMa` -->
                <a href="sua.php?lspMa={{ lsp.lspMa }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Sửa
                </a>

                <!-- Nút xóa, bấm vào sẽ xóa thông tin dựa vào khóa chính `lspMa` -->
                <a onClick="javascript: return confirm('Bạn có muốn xóa dòng này?');" href="xoa.php?lspMa={{ lsp.lspMa }}" class="btn btn-danger">
                    <i class="far fa-trash-alt"></i> Xóa
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
{# End Nội dung trong block content #}