{# Kế thừa layout backend #}
{% extends "/trangAdmin/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Nhà Sản Xuất
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
<span class="animated fadeIn">Nhà Sản Xuất</span>
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<!-- Nút thêm mới, bấm vào sẽ hiển thị form nhập thông tin Thêm mới -->
<a href="them.php" class="btn btn-primary animated fadeIn">
    <i class="fas fa-plus"></i> Thêm mới
</a>
<table class="table table-bordered table-hover mt-2">
    <thead class="thead-dark">
        <tr>
            <th>Mã Nhà Sản Xuất</th>
            <th>Tên Nhà Sản Xuất</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        {% for nsx in ds_nhasanxuat %}
        <tr>
            <td class="animated fadeIn">{{ nsx.nsxMa }}</td>
            <td class="animated fadeIn">{{ nsx.nsxTen }}</td>
            <td class="animated fadeIn">
                <!-- Nút sửa, bấm vào sẽ hiển thị form hiệu chỉnh thông tin dựa vào khóa chính `nsxMa` -->
                <a href="sua.php?nsxMa={{ nsx.nsxMa }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Sửa
                </a>

                <!-- Nút xóa, bấm vào sẽ xóa thông tin dựa vào khóa chính `nsxMa` -->
                <a onClick="javascript: return confirm('Bạn có muốn xóa dòng này?');" href="xoa.php?nsxMa={{ nsx.nsxMa }}" class="btn btn-danger">
                    <i class="far fa-trash-alt"></i> Xóa
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
{# End Nội dung trong block content #}