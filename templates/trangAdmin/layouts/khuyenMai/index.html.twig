{# Kế thừa layout backend #}
{% extends "/trangAdmin/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Khuyến mãi
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
<span class="animated fadeIn">Khuyến mãi</span>
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<!-- Nút thêm mới, bấm vào sẽ hiển thị form nhập thông tin Thêm mới -->
<a href="them.php" class="btn btn-primary animated fadeIn">
    <i class="fas fa-plus"></i> Thêm mới
</a>
<table class="table table-bordered table-hover mt-2">
    <thead class="thead-dark">
        <tr>
            <th>Mã Khuyến mãi</th>
            <th>Tên Khuyến mãi</th>
            <th>Nội dung Khuyến mãi</th>
            <th>Từ ngày</th>
            <th>Đến ngày</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        {% for km in ds_khuyenmai %}
        <tr>
            <td class="animated fadeIn">{{ km.kmMa }}</td>
            <td class="animated fadeIn">{{ km.kmTen }}</td>
            <td class="animated fadeIn">{{ km.kmNoiDung }}</td>
            <td class="animated fadeIn">{{ km.kmTuNgay }}</td>
            <td class="animated fadeIn">{{ km.kmDenNgay }}</td>
            <td class="animated fadeIn">
                <!-- Nút sửa, bấm vào sẽ hiển thị form hiệu chỉnh thông tin dựa vào khóa chính `kmMa` -->
                <a href="sua.php?kmMa={{ km.kmMa }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Sửa
                </a>

                <!-- Nút xóa, bấm vào sẽ xóa thông tin dựa vào khóa chính `kmMa` -->
                <a onClick="javascript: return confirm('Bạn có muốn xóa dòng này?');" href="xoa.php?kmMa={{ km.kmMa }}" class="btn btn-danger">
                    <i class="far fa-trash-alt"></i> Xóa
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
{# End Nội dung trong block content #}