{# Nội dung trong block headline #}
{% block headline %}
Thêm mới Khuyến mãi
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}

<form name="frmKhuyenMai" id="frmKhuyenMai" method="post" action="/php-project/aot-shop/trangAdmin/khuyenMai/them.php">
    <div class="form-group">
        <label for="km_ma">Mã Khuyến mãi</label>
        <input type="text" class="form-control" id="km_ma" name="km_ma" placeholder="Mã Khuyến mãi" readonly>
        <small id="km_maHelp" class="form-text text-muted">Mã Khuyến mãi không được hiệu chỉnh.</small>
    </div>
    <div class="form-group">
        <label for="km_ten">Tên Khuyến mãi</label>
        <input type="text" class="form-control" id="km_ten" name="km_ten" placeholder="Tên Khuyến mãi">
    </div>
    <div class="form-group">
        <label for="km_noidung">Nội dung Khuyến mãi</label>
        <input type="text" class="form-control" id="km_noidung" name="km_noidung" placeholder="Nội dung Khuyến mãi">
    </div>
    <div class="form-group">
        <label for="km_tungay">Từ ngày</label>
        {# <input type="text" class="form-control" id="km_tungay" name="km_tungay" placeholder="Từ ngày"> #}
        <input type="date" class="form-control" id="km_tungay" name="km_tungay" placeholder="Từ ngày" min="1000-01-01" max="3000-12-31">
    </div>
    <div class="form-group">
        <label for="km_denngay">Đến ngày</label>
        {# <input type="text" class="form-control" id="km_denngay" name="km_denngay" placeholder="Đến ngày"> #}
        <input type="date" class="form-control" id="km_denngay" name="km_denngay" placeholder="Đến ngày" min="1000-01-01" max="3000-12-31">
    </div>
    <button class="btn btn-primary" name="btnThem">Thêm vào CSDL</button>
</form>
{% endblock %}
{# End Nội dung trong block content #}