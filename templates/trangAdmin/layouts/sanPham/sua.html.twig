{# Kế thừa layout backend #}
{% extends "/trangAdmin/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Cập nhật Sản phẩm
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Cập nhật Sản phẩm
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<form name="frmSanPham" id="frmSanPham" method="post" action="/php-project/aot-shop/trangAdmin/sanPham/sua.php?spMa={{ sanphamcancapnhat.spMa }}">
    <div class="form-group">
        <label for="sp_ma">Mã Sản phẩm</label>
        <input type="text" class="form-control" id="sp_ma" name="sp_ma" readonly value="{{ sanphamcancapnhat.spMa }}">
        <small id="sp_maHelp" class="form-text text-muted">Mã Sản phẩm không được hiệu chỉnh.</small>
    </div>
    <div class="form-group">
        <label for="sp_ten">Tên Sản phẩm</label>
        <input type="text" required class="form-control" id="sp_ten" name="sp_ten"  value="{{ sanphamcancapnhat.spTen }}">
    </div>
    <div class="form-group">
        <label for="sp_gia">Giá Sản phẩm</label>
        <input type="number" required class="form-control" id="sp_gia" name="sp_gia" value="{{ sanphamcancapnhat.spgia }}">
    </div>
    <div class="form-group">
        <label for="sp_motangan">Mô tả sản phẩm</label>
        <input type="text" required class="form-control" id="sp_motangan" name="sp_motangan" value="{{ sanphamcancapnhat.spMoTaNgan }}">
    </div>
    <div class="form-group">
        <label for="sp_motachitiet">Chi tiết sản phẩm</label>
        <textarea class="form-control rounded-0" required id="sp_motachitiet" name="sp_motachitiet">{{ sanphamcancapnhat.spMoTaChiTiet }}</textarea>
    </div>
    <div class="form-group">
        <label for="sp_soluong">Số lượng Sản phẩm</label>
        <input type="number" required class="form-control" id="sp_soluong" name="sp_soluong" value="{{ sanphamcancapnhat.spSoLuong }}">
    </div>
    <div class="form-group">
        <label for="lsp_ten">Loại sản phẩm</label>
        <select class="form-control" id="lsp_ten" name="lsp_ten">
            {% for lsp in danhsachtenloaisanpham %}
            <option value="{{ lsp }}">{{ lsp }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label for="nsx_ten">Nhà sản xuất</label>
        <select class="form-control" id="nsx_ten" name="nsx_ten">
            {% for nsx in danhsachtennhasanxuat %}
            <option value="{{ nsx }}">{{ nsx }}</option>
            {% endfor %}
        </select>
    </div><div class="form-group">
        <label for="km_ten">Khuyến mãi</label>
        <select class="form-control" id="km_ten" name="km_ten">
            {% for km in danhsachtenkhuyenmai %}
            <option value="{{ km }}">{{ km }}</option>
            {% endfor %}
        </select>
    </div>
    <button class="btn btn-primary" name="btnCapNhat">Cập nhật</button>
</form>
{% endblock %}
{# End Nội dung trong block content #}